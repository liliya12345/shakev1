<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020202"
    tools:context=".MainActivity2">


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Диаграмма занимает 1/3 экрана -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="411dp"
            android:layout_height="171dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/black" />

        <!-- Область для информации (2/3 экрана) -->
        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="262dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            tools:layout_editor_absoluteX="4dp">


            <!-- Легенда -->

            <!-- Статус -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/legendX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="X: 0.0"
                    android:textColor="#FF6B6B"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/legendY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Y: 0.0"
                    android:textColor="#4ECDC4"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/legendZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Z: 0.0"
                    android:textColor="#45B7D1"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitoring sensor data..."
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="177dp"
                android:layout_height="141dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ipcc_bluemarble_west_front" />


            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="74dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/accelerometer"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switch4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:buttonTint="#E91E63"
                    android:text="Switch"
                    android:thumbTint="#009688"
                    android:trackTint="#009688"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="621dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/gyroscope"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switch3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:backgroundTint="#E91E63"
                    android:text="Switch"
                    android:thumbTint="#E91E63"
                    android:trackTint="#E91E63"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="351dp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>